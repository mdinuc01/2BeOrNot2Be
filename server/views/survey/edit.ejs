<%- include ../Partials/header.ejs%>

<%- include ../Partials/main_nav.ejs%>


<div class="jumbotron bg-light p-5 rounded-lg m-3 container-fluid">
    <div class="row">
        <div class="offset-md-3 col=md-6"></div>
        <h1><%= title %></h1>
        <form class="form"  method="POST">
        <div class="form-group">
            <label for="nameTextField">Display Name</label>
            <input type="text" class="form-control"
            id="nameTextField" placeholder="Enter the Survey's name" 
            name="name"
            value="<%= survey.name%>" required>

            <div class="form-group">
                <label for="emailTextField">Email</label>
                <input type="text" class="form-control"
                id="emailTextField" placeholder="Enter the Survey's Email" 
                name="email" 
                value="<%= survey.email%>"required>
            </div>

            <div class="form-group">
                <label for="numberTextField">Phone Number</label>
                <input type="text" class="form-control"
                id="numberTextField" placeholder="Enter the Survey's Phone Number" 
                name="number" 
                value="<%= survey.number%>"required>
            </div>
            
        </div>

        <button class="btn btn-primary" type="submit"><i class="fas fa-edit"></i>Submit</button>
        <a href="/survey-list" class="btn btn-warning"><i class="fas fa-undo"></i> Cancel</a>
    </div>
</div>
    </form>
    

<%- include ../Partials/bottom_nav.ejs%>  

<%- include ../Partials/footer.ejs%>  